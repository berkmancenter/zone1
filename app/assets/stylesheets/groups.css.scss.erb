#groups {
  background: #EFEFEF;
  padding: 2px;
  hgroup {
    clear: both;
    background-color: #cc0001;
    color: #FFF;
    height: 30px;
    h3 {
      display: inline; 
      margin: 0px;
      line-height: 30px;
      padding-left: 10px; 
    }
    ul {
      float: right; 
      padding: 0px;
      margin: 0px;
      list-style-type: none;
      li {
        background-image: url(<%= image_path "button_gradient.png" %>);
        border-left: 1px solid #efefef;
        float: left; 
        > a {
          color: #FFF;
          font-weight: bold;
          font-size: 11px;
          display: inline-block; 
          padding: 6px 12px 6px 12px;
          text-transform: uppercase;
        }
      }
    }
  }
  table {
    margin-bottom: 100px; 
    a {
      color: #336699;
      font-weight: bold;
    }
    tr.even { background: #FFFFFF; }
  }
}

.group_quick_edit form {
  padding: 10px; 
  label {
    font-weight: bold; 
    display: block;
  } 
  small { display: block;
    margin-bottom: 10px; 
  }
  #group_name {
    display: block;
    margin-bottom: 10px; 
  }
  #group_assignable_rights {
    position: relative; 
    top: 2px;
  }
  #rights_label { display: inline; }
  table {
    width: 100%; 
    border-bottom: 1px solid #ededed;
    margin-bottom: 10px; 
  }
  .submit_buttons { 
    border-top: 1px solid #ededed;
    margin-top: 10px;
    padding-top: 10px;
  }
}
