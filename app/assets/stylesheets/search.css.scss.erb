#results {
  width: 662px;
  background: #efefef;
  padding: 4px; 
  float: right;
  .results_options {
    clear: both;
    background-color: #cc0001;
    color: #FFF;
  a {
      color: #FFF;
    }
  ul {
    padding: 0px;
    margin: 0px;
    list-style-type: none;
    li {
      background-image: url(<%= image_path "button_gradient.png" %>);
      border-right: 1px solid #efefef;
      float: left; 
      > a {
        font-weight: bold;
        font-size: 11px;
        display: inline-block; 
        padding: 6px 15px 6px 12px;
        margin-right: 12px; 
        background: transparent url(<%= image_path "white_down_arrow.png" %>) right 11px no-repeat;
      }
    }
    li.displayed { 
      background-position: 0px -30px; 
      > a {
        color: #000;
        background: transparent url(<%= image_path "dark_down_arrow.png" %>) right 11px no-repeat;
      }
    }
  }
  #set_options, #display_options {
    display: none;
    position: absolute;
    background: #999;
    z-index: 100;
    padding: 13px;
    text-transform: uppercase;
    hr {
      clear: both;
      border-color: #b5b5b5; 
      border-top: none;
    }
  }
  #set_options {
    input {
      border: none;
      color: #FFF;
      background: none;
      text-transform: uppercase;
      font-size: 10px;
      font-weight: bold;
    }
  }
  #display_options {
    width: 250px;
    p {
      margin: 0px; 
      float: left;
      width: 49%;
      input {
        position: relative; 
        top: 1px;
      }
    }
    #list_view, #grid_view {
      display: inline-block;
	  width: 39px; 
      height: 28px;
      background-image: url(<%= image_path "listgrid.png" %>);
    }
    #grid { margin-left: 25px; }
    #grid_view {
      background-position: -39px 0px;
    }
  }
  .paginate {
    margin: 6px 3px 6px 0px;
    float: right;
    span,a,em {
      margin: 0px 3px;  
      font-weight: bold;
      font-style: normal;
    }
    .previous_page {
      background-repeat: none;
      display: inline-block;
      background-image: url(<%= image_path "left.png" %>);
      text-indent: -10000px;
      height: 19px;
      width: 19px;
    }
    .next_page {
      background-repeat: none;
      display: inline-block;
      background-image: url(<%= image_path "right.png" %>);
      text-indent: -10000px;
      height: 19px;
      width: 19px;
    }
    .disabled, em.current {
      opacity: 0.5;
    } 
  }
  }
  .menu {
  > span {
      margin: 5px 2px;
      display: inline-block;
      font-weight: bold;
      a {
        background: transparent url(<%= image_path "dark_right_arrow.png" %>) right 1px no-repeat;
        padding-right: 12px;
      }
      a.asc {
        background: transparent url(<%= image_path "dark_down_arrow.png" %>) right 4px no-repeat;
        padding-right: 15px;
      }
      a.desc {
        background: transparent url(<%= image_path "dark_up_arrow.png" %>) right 4px no-repeat;
        padding-right: 15px;
      }
    }
    .filename {
      a { color: #000; }
      width: 85px; text-indent: 20px; 
    }
    .size { width: 70px; }
    .date {
      a { color: #000; }
      width: 80px; 
    }
    .tags { width: 100px; }
    .flags { width: 75px; }
    .author {
      a { color: #000; }
      width: 60px;
    }
    .license { width: 65px; }
    .batch { width: 60px; }
  }
}
 
#display_options { 
  #list_view, #grid_view {
    display: inline-block;
	width: 39px; 
	height: 28px;
    background-image: url(<%= image_path "listgrid.png" %>);
  }
  #grid { margin-left: 25px; }
  #grid_view {
    background-position: -39px 0px;
  }
}

.file span.highlighted { 
  background-color: #c36969; color: #FFF;
  padding: 3px;
  line-height: 1.0em;
}

.list {
  .even { background: #fafafa; }
  .file { 
    float: none;
    width: 100%;
    span { display: inline-block; margin: 3px 2px; }
    .filename { 
      width: 85px;
      input { position: relative; top: 2px; }
      a { color: #000; }
    }
    .size { width: 70px; }
    .date { width: 80px; }
    .tags { width: 100px; }
    .flags { 
      width: 75px; 
      input { margin: 2px; 
      }
    }
    .author { width: 60px; }
    .license { width: 65px; }
    .batch { width: 60px; }
    .icon { display: none; }
  }
}
.grid {
  .menu { display: none; }
  .file {
    float: left;
    width: 150px;
    padding: 5px; 
    .size, .tags, .date, .batch, .flags, .author { display: none; }
    .icon { 
      border: 1px solid #cecece;
      display: block;
      padding: 5px;
      text-align: center; 
    }
    .filename { 
      text-align: center; 
      .finput { 
        text-align: left;
        display: block;
        background: #cecece;
        width: 150px;
        height: 18px;
        input { padding: 2px; position: relative; top: -2px; }
      }
      a {
        display: block;
        font-weight: bold;
      }
    }
  }
}
#quick_edit_panel { 
  display: none;
  position: absolute;
  background: #ccc; 
  padding: 4px;
  top: 0px; 
  width: 420px;
  h3 {
    font-weight: normal;
    margin: 5px 2px;
    a {
      float: right;
      margin-right: 10px;
      background-image: url(<%= image_path "quick_edit_links.png?body=1" %>);
      text-indent: -10000px;
      width: 25px;
      height: 18px;
    } 
    a#globe-single {
      background-position: -34px 0px;
    }
    a#download-single {
      background-position: -67px 0px;
      width: 19px;
    }
  }
  table { 
    padding: 10px 25px;
    background: #FFF;
    p {
      line-height: 1.2em;
      margin: 0px; 
      label { font-weight: bold; }
    }
  }
  .flagging {
    br { display: none; }
    textarea {
      display: none; 
    }
  }
  #close_quick_edit {
    display: block;
    position: absolute;
	right: 0px;
    bottom: 0px;
    width: 124px;
    line-height: 24px;
    color: #000;
    text-align: center;
    text-transform: uppercase;
    font-weight: bold;
    background-image: url(<%= image_path "quick_edit.png?body=1" %>);
    span {
      width: 6px;
      height: 10px;
      display: inline-block;
      margin-left: 4px;
      background: transparent url(<%= image_path "dark_right_arrow.png" %>) 0px 1px no-repeat;
    }
  } 
}
