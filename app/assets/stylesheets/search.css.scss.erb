#results {
  width: 662px;
  background: #efefef;
  padding: 4px; 
  float: right;
  .results_options {
    clear: both;
    background-color: #cc0001;
    color: #FFF;
  a {
      color: #FFF;
    }
  ul {
    padding: 0px;
    margin: 0px;
    list-style-type: none;
    li {
      background-image: url(<%= image_path "button_gradient.png?body=1" %>);
      border-right: 1px solid #efefef;
      float: left; 
      > a {
        font-weight: bold;
        font-size: 11px;
        display: inline-block; 
        padding: 6px 15px 6px 12px;
        margin-right: 12px; 
        background: transparent url(<%= image_path "white_down_arrow.png?body=1" %>) right 11px no-repeat;
      }
    }
    li.displayed { 
      background-position: 0px -30px; 
      > a {
        color: #000;
        background: transparent url(<%= image_path "dark_down_arrow.png?body=1" %>) right 11px no-repeat;
      }
    }
  }
  #set_options, #display_options {
    display: none;
    position: absolute;
    background: #999;
    z-index: 100;
    padding: 13px;
    text-transform: uppercase;
    hr {
      clear: both;
      border-color: #b5b5b5; 
      border-top: none;
    }
  }
  #set_options {
    input {
      border: none;
      color: #FFF;
      background: none;
      text-transform: uppercase;
      font-size: 10px;
      font-weight: bold;
    }
  }
  #display_options {
    width: 250px;
    p {
      margin: 0px; 
      float: left;
      width: 49%;
      input {
        position: relative; 
        top: 1px;
      }
    }
    #list_view, #grid_view {
      display: inline-block;
	  width: 39px; 
      height: 28px;
      background-image: url(<%= image_path "listgrid.png?body=1" %>);
    }
    #grid { margin-left: 25px; }
    #grid_view {
      background-position: -39px 0px;
    }
  }
  .paginate {
    margin: 6px 3px 6px 0px;
    float: right;
    span,a,em {
      margin: 0px 3px;  
      font-weight: bold;
      font-style: normal;
    }
    .previous_page {
      background-repeat: none;
      display: inline-block;
      background-image: url(<%= image_path "left.png?body=1" %>);
      text-indent: -10000px;
      height: 19px;
      width: 19px;
    }
    .next_page {
      background-repeat: none;
      display: inline-block;
      background-image: url(<%= image_path "right.png?body=1" %>);
      text-indent: -10000px;
      height: 19px;
      width: 19px;
    }
    .disabled, em.current {
      opacity: 0.5;
    } 
  }
  }
  .menu {
  span {
      margin: 5px 2px;
      display: inline-block;
      font-weight: bold;
    }
    .filename { width: 85px; text-indent: 20px; }
    .size { width: 70px; }
    .date { width: 80px; }
    .tags { width: 85px; }
    .flags { width: 100px; }
    .author { width: 60px; }
    .license { width: 65px; }
    .batch { width: 60px; }
  }
}
 
#display_options { 
  #list_view, #grid_view {
    display: inline-block;
	width: 39px; 
	height: 28px;
    background-image: url(<%= image_path "listgrid.png?body=1" %>);
  }
  #grid { margin-left: 25px; }
  #grid_view {
    background-position: -39px 0px;
  }
}

.list {
  .even { background: #fafafa; }
  .file { 
    float: none;
    width: 100%;
    span { display: inline-block; margin: 3px 2px; }
    .filename { 
      width: 85px;
      input { position: relative; top: 2px; }
    }
    .size { width: 70px; }
    .date { width: 80px; }
    .tags { width: 85px; }
    .flags { 
      width: 100px; 
      input { margin: 2px; }
    }
    .author { width: 60px; }
    .license { width: 65px; }
    .batch { width: 60px; }
    .icon { display: none; }
  }
}
.grid {
  .menu { display: none; }
  .file {
    float: left;
    width: 150px;
    padding: 5px; 
    .size, .tags, .date, .batch, .flags, .author { display: none; }
    .icon { 
      border: 1px solid #cecece;
      display: block;
      padding: 5px;
      text-align: center; 
    }
    .filename { 
      text-align: center; 
      .finput { 
        text-align: left;
        display: block;
        background: #cecece;
        width: 150px;
        height: 18px;
        input { padding: 2px; position: relative; top: -2px; }
      }
      a {
        display: block;
        font-weight: bold;
      }
    }
  }
}

