<table width="100%" cellpadding="0" cellspacing="0">
	<tr>
		<td id="facets" valign="top">
  			<%= render 'filter' %>
		</td>
		<td id="results" valign="top" class="list" width="750">
			<p class="response"></p>
			<%= form_tag(download_set_stored_file_index_path, :method => "POST", :id => "download-set") do %>
                          <%= submit_tag "Download Selected Files", :id => "download-submit" %>
			<% end -%>
			<%= form_tag(bulk_edit_stored_file_index_path, :method => "POST", :id => "bulk-edit") do %>
                          <%= submit_tag "Bulk Edit", :id => "bulk-edit-submit" %>
			<% end -%>
                        
			<h3>Results</h3>
			<a href="#" id="list">List</a> | <a href="#" id="thumb">Thumb</a>
			<p><%=pluralize(@search.total, 'result') %> found.</p>
            <p>
              Sort by: 
              <%= sortable "created_at", "Date" %>,
              <%= sortable "title" %>, 
              <%= sortable "file_size", "Size" %>, 
              <%= sortable "author" %>, 
              <%= sortable "batch_id", "Batch ID" %>
              (<%= sort_column %>, <%= sort_direction %>)
            </p>
            <p>
              <%= form_tag search_path, :method => "POST" do %>
                Items per page: <%= text_field_tag "per_page", per_page, :size => 2 %>
                <%=submit_tag "Refresh" %>
              <% end %>
            </p>
			<div class="menu">
				<span class="filename">Filename</span>
				<span class="size">Size</span>
				<span class="date">Date</span>
				<span class="tags">Tags</span>
				<span class="flags">Flags</span>
				<span class="author">Author</span>
				<span class="license">Copyright</span>
				<span class="batch">Batch</span>
			</div>
			
			<% @hits.each do |hit| %> 
				<div class="file" data-id="<%= hit.result.id %>">
					<span class="icon">
						<%= image_tag "image.png" %>
					</span>
					<span class="filename">	
						<input class="downloadable" type="checkbox" name="stored_file[<%= hit.result.id %>]" value="1" />
						<%= link_to (hit.result.title.blank? ? hit.result.original_filename : hit.result.title), download_stored_file_path(hit.result) %>
					</span>
					<span class="size">X KB</span>
					<span class="date"><%= hit.result.created_at.strftime("%m-%d-%Y") %></span>
					<span class="tags"><%= hit.stored(:tag_list) %></span>
					<span class="flags">
						<% Flag.all.each do |flag| %>
						<input type="checkbox" disabled="true" data-method="toggle_<%= flag.name.downcase %>" title="<%= flag.label %>" <%= raw 'checked="checked"' if !hit.stored(:flag_ids).nil? && hit.stored(:flag_ids).include?(flag.id) %> />
						<% end -%>	
					</span>
					<span class="author"><%= hit.result.author %></span>
					<span class="license"><%= hit.stored(:license_name) %></span>
					<span class="batch"><%= hit.result.batch_id %></span>
					<span><%= link_to "QE", edit_stored_file_path(hit.result), :remote => true, :class => "quick_edit_link" %></span>
				</div>
			<% end %>
		</td>
</table>

<div style="margin-top:2em;">
	<%= will_paginate @hits %>
</div>


<div id="quick_edit_panel"></div>
