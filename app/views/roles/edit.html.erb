<h1><%= @role.name %> rights</h1>

<%= form_tag(role_path(@role), :method => "put", :id => "edit_roles") do %>
<% @rights.each do |right| %>
<p>
<input name="rights[<%= right.id %>]" <%= raw 'checked="checked"' if @role.rights.include?(right) %> type="checkbox" value="1" />
<%= right.method %><br />
<small><%= right.description %></small>
</p>
<% end -%>
<div class="clear"></div>
<%= submit_tag("Update Rights") %>
<% end -%>
