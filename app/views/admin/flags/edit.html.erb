<h1>Flag</h1>

<%= form_for @flag, :url => admin_flag_path(@flag) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br />
<%= f.label :label %>
<%= f.text_field :label %><br />
<%= f.submit "Update" %>
<% end -%>

<% if !@right.nil? -%>
<h3>Attached Right</h3>

<%= link_to @right.action, edit_admin_right_path(@right) %><br />
<small><%= @right.description %></small>

<h3>Attached Roles to Right</h3>

<% @right.roles.each do |role| -%>
<%= link_to role.name, edit_admin_role_path(role) %><br />
<% end -%>
<% end -%>
