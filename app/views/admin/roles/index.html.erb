<h1>New Role</h1>
<%= form_for(@role, :url => admin_roles_path) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit %>
<% end -%>

<h1>Roles</h1>

<table width="100%" cellpadding="0" cellspacing="0">
<% @roles.each do |role| %>
<tr>
<td><%= link_to role.name, edit_admin_role_path(role) %></td>
<td><%= link_to 'Delete',  admin_role_path(role), :method => "DELETE" %></td>
</tr>
<% end -%>
</table>
